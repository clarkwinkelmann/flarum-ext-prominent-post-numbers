{
    "name": "clarkwinkelmann/flarum-ext-prominent-post-numbers",
    "description": "Show numbers on posts and replies",
    "keywords": [
        "flarum",
        "number"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2"
    },
    "authors": [
        {
            "name": "Clark Winkelmann",
            "homepage": "https://clarkwinkelmann.com/",
            "email": "clark.winkelmann@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/clarkwinkelmann/flarum-ext-prominent-post-numbers"
    },
    "autoload": {
        "psr-4": {
            "ClarkWinkelmann\\ProminentPostNumbers\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Prominent Post Numbers",
            "category": "feature",
            "icon": {
                "name": "fas fa-hashtag",
                "backgroundColor": "#684ba6",
                "color": "#fff"
            },
            "optional-dependencies": [
                "flarum/mentions"
            ]
        }
    }
}
